<div class="author-list flex">
  <ul class="author-avatar-list flex -space-x-1 overflow-hidden">
    {{#foreach authors}}
    <li class="author-avatar-list-item">
      {{#if profile_image}}
      <a href="{{url}}" class="author-avatar">
        <img class="author-profile-image inline-block h-6 w-6 rounded-full ring-2 ring-white"
          src="{{img_url profile_image size=" xs"}}"
          alt="{{name}}" />
      </a>
      {{else}}
      <a href="{{url}}" class="author-avatar">
        <img class="author-profile-image inline-block h-6 w-6 rounded-full ring-2 ring-white"
          src='https://images.unsplash.com/photo-1491528323818-fdd1faba62cc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80'
          alt="" />
      </a>
      {{/if}}
    </li>
    {{/foreach}}
  </ul>
  <h4 class='author-name'>{{authors}}</h4>
</div>